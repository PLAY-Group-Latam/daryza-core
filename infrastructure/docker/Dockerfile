FROM php:8.3-fpm

# 1Ô∏è‚É£ Instalar dependencias de sistema y extensiones PHP
RUN apt-get update && apt-get install -y \
    zip unzip curl git libpng-dev libonig-dev libxml2-dev libzip-dev libpq-dev \
    && docker-php-ext-install pdo pdo_pgsql mbstring zip exif pcntl bcmath gd

# 2Ô∏è‚É£ Instalar Node.js para Vite / frontend
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs

# 3Ô∏è‚É£ Directorio de trabajo
WORKDIR /var/www

# 4Ô∏è‚É£ Instalar Composer (usa cache de Docker)
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# 5Ô∏è‚É£ Copiar archivos de dependencias y cachear
COPY composer.json composer.lock ./
# ‚ö†Ô∏è Ignorar scripts para no fallar por artisan a√∫n inexistente
RUN composer install --no-dev --optimize-autoloader --ignore-platform-reqs --no-scripts

# 6Ô∏è‚É£ Copiar package.json y package-lock.json / yarn.lock
COPY package*.json ./
RUN npm install --legacy-peer-deps

# 7Ô∏è‚É£ Copiar el resto del c√≥digo de la aplicaci√≥n
COPY . /var/www

# 8Ô∏è‚É£ Ajustar permisos
RUN chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage /var/www/bootstrap/cache

# 9Ô∏è‚É£ Copiar script de arranque
COPY infrastructure/scripts/default.sh /usr/local/bin/docker.sh
RUN chmod +x /usr/local/bin/docker.sh

# üîü Comando por defecto: ejecuta el script
#    En default.sh puedes hacer: php artisan package:discover y compilar frontend
CMD ["/usr/local/bin/docker.sh"]
